<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GirisActivity">

  <TextView
      android:id="@+id/txtBaslik"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginTop="38dp"
      android:text="Giriş Ekranı"
      android:textSize="30dp" />
  <TextView
      android:id="@+id/txtKullaniciAdi"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtBaslik"
      android:text="Kullanıcı Adı"
      android:textSize="15dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="10dp"
      />

  <EditText
      android:id="@+id/txtUserName"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtKullaniciAdi"
      android:layout_marginStart="10dp"
      android:layout_marginTop="20dp"
      android:layout_marginEnd="10dp"
      android:hint="Kullanıcı Adı Girin" />
  <TextView
      android:id="@+id/Parola"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/txtUserName"
      android:text="Parola"
      android:textSize="15dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="20dp"
      />
  <EditText
      android:id="@+id/txtParola"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/Parola"
      android:hint="Parolayı Girin"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="20dp"
      />
  <Button
      android:id="@+id/BtnLogin"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="Giriş"
      android:layout_below="@id/txtParola"
      android:layout_marginStart="10dp"
      android:layout_marginEnd="10dp"
      android:layout_marginTop="20dp"
      android:background="#D54869"
      />


</RelativeLayout>
